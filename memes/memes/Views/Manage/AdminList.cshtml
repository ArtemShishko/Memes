@model IEnumerable<memes.Models.ShoppingViewModel>

@{
    ViewBag.Title = "AdminList";
}

        <h2 class="display-4" style="margin-top:40px; text-align:center">Table "Clothes"</h2>

        <p>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <a style="margin-left:1600px; margin-bottom:30px" class="text-right" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            }
            @Html.ActionLink("Create New", "Admin", null, new
            {
                @class = "btn btn-dark",
                style = "margin-left:20px"
        })
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.MoreDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrandInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LookAfter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.About)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.style)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.MoreDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LookAfter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.About)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.style)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "AdminEdit", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
                </tr>
            }

        </table>
