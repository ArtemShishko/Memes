<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/carousel/">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .media (min-width: 768px) {
            .bd-placeholder-img-lg

        {
            font-size: 3.5rem;
        }
        }
    </style>
    <link href="~/Content/carousel.css" rel="stylesheet">
    <link href="~/Content/navbars.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-light sticky-top second-nav">
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                <a class="p-0 text-muted">
                    @Html.ActionLink("T-Shirts", "TShirts", "Men", null, new { @class = "p2 text-muted nav-link display-4", style = "font-size:18px; font-weight:350" })
                </a>
                <a class="p-0 text-muted">
                    @Html.ActionLink("Trousers", "Trousers", "Men", null, new { @class = "p2 text-muted nav-link display-4", style = "font-size:18px; font-weight:350" })
                </a>
                <a class="p-0 text-muted">
                    @Html.ActionLink("Hoodies", "Hoodies", "Men", null, new { @class = "text-muted nav-link display-4", style = "font-size:18px; font-weight:350" })
                </a>
                <a class="p-0 text-muted">
                    @Html.ActionLink("Jackets", "Jackets", "Men", null, new { @class = "text-muted nav-link display-4", style = "font-size:18px; font-weight:350" })
                </a>
            </nav>
        </div>
    </nav>

    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <svg class="bd-placeholder-img" x="25" y="15" viewBox="0 0 100 100" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                        <rect width="100%" height="100%" fill="#777" />
                        <image xlink:href="~/Images/123.jpg" width="100%" height="100%"></image>
                    </svg>
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1 class="display-4" style="color: black; font-weight:300; font-size:60px">STREET STYLE</h1>
                            <p class="display-4" style="color: black; font-weight:300">Many possibilities.</p>
                            <p><a class="btn display-4 btn-dark" style="background-color:black" href="@Url.Action("Street", "Men")" role="button">SHOP NOW</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Marketing messaging and featurettes
        ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->

        <div class="container marketing">

            <hr class="featurette-divider">

            <div class="row featurette">
                <div class="col-md-7">
                    <h2 class="featurette-heading display-4" style="font-size: 42px; font-weight:300; color:black">SUMMER 2020</h2>
                    <h3><span class="text-muted display-4" style="font-size:30px; color:black">Main shades of the season. It’ll blow your mind.</span></h3>

                    <a class="font-weight-normal display-4" style="font-size:22px" href="@Url.Action("Summer", "Men")">Learn more..</a>
                </div>
                <div class="col-md-5">
                    <svg class="bd-placeholder-img" width="600" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                        <image xlink:href="~/Images/summer-2020.jpg" width="700" height="500"></image>
                    </svg>
                </div>
            </div>

            <hr class="featurette-divider">

            <div class="row featurette">
                <div class="col-md-7">
                    <svg class="bd-placeholder-img" width="600" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                        <image xlink:href="~/Images/nigga.jpg" width="700" height="500"></image>
                    </svg>
                </div>
                <div class="col-md-5" >
                    <h2 class="featurette-heading display-4" style="font-size:40px; font-weight:300; color:black">TRENDING BRANDS </h2>
                    <h3><span class="text-muted display-4" style="font-size:30px; font-weight:300; color:black">See for yourself.</span></h3>
                    <a class="font-weight-normal display-4" style="font-size:22px" href="@Url.Action("Brands", "Men")">Learn more..</a>
                </div>
            </div>


            <!-- /END THE FEATURETTES -->

        </div><!-- /.container -->
        <!-- FOOTER -->
        @*<footer class="container">
                <p class="float-right"><a href="#">Back to top</a></p>
                <p>&copy; 2017-2020 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
            </footer>*@
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../assets/js/vendor/jquery.slim.min.js"><\/script>')</script>
    <script src="../assets/dist/js/bootstrap.bundle.js"></script>
</body>
</html>
